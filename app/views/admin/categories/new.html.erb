<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag 'items', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<div class="Box-container">
    <div class="row">
        <div class="Box">
            <div class="form-container">
                <h2><b>Add Category</b></h2>

                <%= form_with(model: [:admin, @category], url: admin_categories_path, method: :post, local: true) do |form| %>
                    <div class="form-group">
                        <%= form.label :name %>
                    </div>
                    <%= form.text_field :name, class:"field" %>

                    <%= form.submit "Submit", class:"Submit-button" %>
                <% end %>
            </div>
        </div>
    </div>
</div>

</body>
</html>