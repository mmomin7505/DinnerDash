<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag 'items', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<div class="Box-container">
    <div class="row">
      <div class="Box">
        <div class="form-container">
          <h2><b>Add Item</b></h2>
          <%= form_with(model: [:admin, @item], url: admin_items_path, method: :post, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: "field" %>
            </div>
            
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: "field" %>
            </div>
            
            <div class="form-group">
              <%= form.label :quantity %>
              <%= form.number_field :quantity, step: 1, class: "field" %>
            </div>
            
            <div class="form-group">
              <%= form.label :price %>
              <%= form.number_field :price, step: 1, class: "field" %>
            </div>
            
            <div class="form-group">
              <%= form.label :image %>
              <%= form.file_field :image, class: "field" %>
            </div>
            
            <div class="form-group">
              <%= form.label :category %>
              <%= form.collection_select :category_ids, Category.all, :id, :name, include_blank: true, class: "field" %>
            </div>
            
            <%= form.submit "Submit", class: "Submit-button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>